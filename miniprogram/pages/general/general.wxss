.container {
    margin: 0 auto;
    padding: 1.5rem;
    background-color: #f3f4f6;
    min-height: 100vh;
}

.page-title {
    font-size: 2.25rem;
    font-weight: bold;
    text-align: center;
    color: #2563eb;
    margin-bottom: 2.5rem;
}

.announcement-section,
.keyword-section {
    background-color: #ffffff;
    padding: 1.5rem;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    margin-bottom: 2.5rem;
}

.section-title {
    font-size: 1.5rem;
    font-weight: bold;
    color: #1f2937;
    margin-bottom: 1rem;
}

.announcement-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #f9fafb;
    padding: 1rem;
    margin-bottom: 0.5rem;
    border-radius: 0.375rem;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    transition: background-color 0.3s ease;
}

.announcement-item:hover {
    background-color: #f3f4f6;
}

.announcement-content {
    color: #4b5563;
}

.edit-button {
    background-color: #fbbf24;
    color: #ffffff;
    font-weight: bold;
    padding: 0.375rem 0.75rem;
    border-radius: 0.375rem;
    outline: none;
}

.edit-button:hover {
    background-color: #f59e0b;
}

.keyword-list {
    display: flex;
    flex-wrap: wrap;
    margin-top: 0.5rem;
    margin-bottom: 1rem;
}

.keyword-tag {
    background-color: #bfdbfe;
    color: #1d4ed8;
    padding: 0.375rem 0.75rem;
    border-radius: 0.375rem;
    margin: 0.25rem;
    transition: background-color 0.3s ease;
    cursor: pointer;
}

.keyword-tag:hover {
    background-color: #93c5fd;
}

.selected-keyword {
    background-color: #dc2626;
    color: #ffffff;
}

.input-field {
    border: 1px solid #d1d5db;
    padding: 0.5rem;
    width: 100%;
    border-radius: 0.375rem;
    margin-bottom: 0.5rem;
    outline: none;
}

.input-field:focus {
    box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.5);
}

.button-group {
    display: flex;
    gap: 0.5rem;
}

.add-button {
    background-color: #22c55e;
    color: #ffffff;
    font-weight: bold;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    outline: none;
}

.add-button:hover {
    background-color: #16a34a;
}

.delete-button {
    background-color: #dc2626;
    color: #ffffff;
    font-weight: bold;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    outline: none;
}

.delete-button:hover {
    background-color: #b91c1c;
}    