.container {
    margin: 0 auto;
    padding: 1.5rem;
    background-color: #f3f4f6;
    min-height: 100vh;
}

.page-title {
    font-size: 2.25rem;
    font-weight: bold;
    text-align: center;
    color: #2563eb;
    margin-bottom: 2.5rem;
}

.form-item {
    margin-bottom: 1.5rem;
}

.form-label {
    font-size: 1.25rem;
    color: #1f2937;
    margin-bottom: 0.5rem;
}

.image-uploader {
    width: 200px;
    height: 200px;
    border: 1px dashed #d1d5db;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
}

.uploaded-image {
    width: 100%;
    height: 100%;
}

.detail-images {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
}

.form-input {
    border: 1px solid #d1d5db;
    padding: 0.5rem;
    width: 100%;
    border-radius: 0.375rem;
    outline: none;
}

.picker-view {
    border: 1px solid #d1d5db;
    padding: 0.5rem;
    width: 100%;
    border-radius: 0.375rem;
    background-color: #ffffff;
}

.submit-button {
    background-color: #22c55e;
    color: #ffffff;
    font-weight: bold;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    outline: none;
    display: block;
    margin-top: 2rem;
}

.submit-button:hover {
    background-color: #16a34a;
}    