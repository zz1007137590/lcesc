.custom-tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #ffffff;
    border-top: 1px solid #eaeaea;
    display: flex;
    flex-direction: column;
}

.tab-bar-group {
    display: flex;
    justify-content: space-around;
    padding: 5px 0;
}

.tab-bar-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 12px;
}

.tab-bar-item image {
    width: 24px;
    height: 24px;
    margin-bottom: 2px;
}